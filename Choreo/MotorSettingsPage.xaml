<UserControl x:Class="Choreo.MotorSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Choreo"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280" Style="{DynamicResource WinAll}">
    <UserControl.Resources>
        <local:EditDataItemSetter x:Key="EditItemSetter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Top">
            <Viewbox Stretch="Fill">
                <TextBlock Text="CURRENT POSITION &amp; LOAD" Margin="20"/>
            </Viewbox>
            <local:MotorStatusPanel Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <local:DataItemUI DataContext="{Binding Path=Name}" SourceCollection="{Binding Source={x:Static local:Globals.VM}, Path=Motors}" CustomSetter="{StaticResource EditItemSetter}"/>
            <local:DataItemUI DataContext="{Binding Path=SetPosition}"/>
        </StackPanel>

    </Grid>
</UserControl>
