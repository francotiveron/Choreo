<UserControl x:Class="Choreo.HomeTopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Choreo"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="1920" Style="{DynamicResource WinAll}">
         <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Source="VerendusLogo.png"/>
                <Button x:Name="MainMenu" Grid.Column="3" Template="{DynamicResource ButtonControlTemplateMainMenu}">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <Button x:Name="ExitButton" Content="Exit" Click="ExitButton_Click"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <StackPanel x:Name="TopToolbarPanel" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Home" Command="{x:Static local:MainWindow.HomeCmd}"/>
                    <Button Content="Cueing" Command="{x:Static local:MainWindow.CueingCmd}"/>
                    <Button Content="Button"/>
                </StackPanel>
            </Grid>
        </Grid>
</UserControl>
