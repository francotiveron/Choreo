<UserControl x:Name="CancelButton" x:Class="Choreo.GroupTopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Choreo"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="1920" Style="{DynamicResource WinAll}">
    <DockPanel>
        <DockPanel.Background>
            <SolidColorBrush Color="{Binding Color, FallbackValue=DarkGreen}"/>
        </DockPanel.Background>
        <Label Content="Edit Group" Margin="10,0" Padding="20,0" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Name, FallbackValue=Group X}" VerticalAlignment="Center" Margin="10,0" Padding="20,0"/>
        <Button x:Name="GroupEditSaveButton" Content="SAVE" DockPanel.Dock="Right" HorizontalAlignment="Right" Height="90" VerticalAlignment="Bottom" Click="Button_Click"/>
        <Button x:Name="GroupEditClearButton" Content="CLEAR" DockPanel.Dock="Right" HorizontalAlignment="Right" Click="Button_Click"/>
        <Button x:Name="GroupEditCancelButton" Content="CANCEL" DockPanel.Dock="Right" HorizontalAlignment="Right" Click="Button_Click"/>
    </DockPanel>
</UserControl>
