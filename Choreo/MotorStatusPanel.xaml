<UserControl x:Class="Choreo.MotorStatusPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Choreo"
             mc:Ignorable="d" 
             d:DesignHeight="134" d:DesignWidth="120" Background="#333333">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <local:DataItemUI DataContext="{Binding Position}"/>
            <local:DataItemUI Grid.Row="1" DataContext="{Binding Load}"/>
            <local:MotorStatusIndicator Grid.Row="2"/>
            <Rectangle Grid.Row="3" Fill="{Binding Status, Converter={StaticResource StatusBrushConverter}, FallbackValue=Gray}"/>

        </Grid>
        <ProgressBar Grid.Column="1" Foreground="#FFC3BABA" BorderBrush="#00BCBCBC" Value="30" Orientation="Vertical" Background="#FF534F4F"/>
    </Grid>
</UserControl>
