<UserControl x:Class="Choreo.MotionTopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Choreo"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="1280">
    <DockPanel Background="#FF8F0570">
        <Label Content="Motion" Style="{StaticResource TopBarLabelStyle}"/>
        <TextBlock DataContext="{Binding Hook}" Text="{Binding Name, FallbackValue=Hook X}" Style="{StaticResource TopBarTextBlockStyle}"/>
        <Button Content="X" Click="Button_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFDFBFB" HorizontalAlignment="Right" Padding="50,1"/>
    </DockPanel>
</UserControl>
