<UserControl x:Class="Choreo.CueTopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Choreo"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="1920" Style="{DynamicResource WinAll}">
    <DockPanel Background="#FF0D4D16">
        <Label Content="Cue Settings" Style="{StaticResource TopBarLabelStyle}" />
        <TextBlock Text="{Binding Name, FallbackValue=Cue X}" Style="{StaticResource TopBarTextBlockStyle}" />
        <Button x:Name="CueEditSaveButton" Content="SAVE" Style="{StaticResource TopBarCommandButtonStyle}"  Click="Button_Click"/>
        <Button x:Name="CueEditCancelButton" Content="CANCEL" Style="{StaticResource TopBarCommandButtonStyle}" Click="Button_Click"/>
    </DockPanel>

</UserControl>
