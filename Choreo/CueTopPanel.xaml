<UserControl x:Class="Choreo.CueTopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Choreo"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="1280">
    <DockPanel Background="#FF0D4D16">
        <Label Content="Cue Settings" />
        <Button x:Name="CueAddRowButton" Content="ADD ROW" Style="{StaticResource TopBarCommandButtonStyle}"  Click="Button_Click"/>
        <Button x:Name="CueEditSaveButton" Content="SAVE" Style="{StaticResource TopBarCommandButtonStyle}"  Click="Button_Click"/>
        <Button x:Name="CueEditCancelButton" Content="CANCEL" Style="{StaticResource TopBarCommandButtonStyle}" Click="Button_Click"/>
        <CheckBox x:Name="ForceRotational" HorizontalAlignment="Right" Grid.Column="1" Content="Rotational" DockPanel.Dock="Right" Click="ForceRotational_Click"/>

    </DockPanel>

</UserControl>
