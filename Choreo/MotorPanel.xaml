<UserControl x:Class="Choreo.MotorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:win="clr-namespace:System.Windows;assembly=PresentationFramework"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             xmlns:local="clr-namespace:Choreo"
             mc:Ignorable="d" 
             d:DesignHeight="390" d:DesignWidth="320" Loaded="UserControl_Loaded" Style="{DynamicResource WinAll}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Viewbox Stretch="Fill">
        <Border BorderThickness="2,2,2,2" BorderBrush="#FFEEFF00" Height="390" Width="320" IsManipulationEnabled="True" ManipulationStarted="Border_ManipulationStarted" Loaded="Border_Loaded" ManipulationDelta="Border_ManipulationDelta" ManipulationCompleted="Border_ManipulationCompleted">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Border Background="#FF6C6666">
                    <TextBlock Text="Motor 1" TextAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="5" Orientation="Vertical" d:LayoutOverrides="Height">
                        <Grid Height="327.75" d:LayoutOverrides="LeftPosition, RightPosition">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <StackPanel>
                                <Label Content="Position" VerticalAlignment="Top"/>
                                <Label x:Name="Position" Content="{Binding Position, FallbackValue=13\' - 4.5\'\'}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1">
                                <Label Content="Load" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"/>
                                <DockPanel d:LayoutOverrides="VerticalAlignment, LeftPosition, RightPosition">
                                    <Label x:Name="Load" Content="13' - 4.5''"/>
                                    <Label DockPanel.Dock="Right" Content="LBS" HorizontalAlignment="Right"/>
                                </DockPanel>
                            </StackPanel>
                            <local:MotorStatusIndicator Grid.Row="2"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
