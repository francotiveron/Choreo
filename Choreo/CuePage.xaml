<UserControl x:Class="Choreo.CuePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Choreo"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel VerticalAlignment="Top" >
            <local:DataItemUI DataContext="{Binding Number}" Margin="5,10"/>
            <local:DataItemUI DataContext="{Binding Name}" Margin="5,10"/>
            <CheckBox HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" Content="Display Cue in Show"/>
        </DockPanel>
        <local:CueRowListView Grid.Row="1"/>
    </Grid>
</UserControl>
